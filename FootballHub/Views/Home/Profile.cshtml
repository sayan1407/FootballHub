@model StatsVM
@{
    var imageUrl = "~/Image/" + Model.Player.Image;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>Document</title>
</head>
<body>
    <div class="row ">
        <div class="col-3 ms-5">
            <img src="~/Image/@Model.Player.Image" alt="@Model.Player.Name">
            <h2>@Model.Player.Name</h2>
            <h5>Profile Summary</h5>
            <table class="table">
                <tr>
                    <td>Jersy No : @Model.Player.JersyNo</td>
                </tr>
                <tr>
                    <td>Nationality : @Model.Player.Nationality</td>
                </tr>
                <tr>
                    <td>Position : @Model.Player.Position</td>
                </tr>
            </table>
        </div>
        <div class="col-6 ms-3">
            <h4>Career Summary</h4>
            <table class="table">
                <thead>
                  <tr>
                      <th></th>
                      <th>Apps</th>
                      <th>Goals</th>
                      <th>Assists</th>                      
                  </tr>
                </thead>
                <tbody>
                    @foreach(var stat in Model.Stats)
                    {
                        <tr>
                            <td>@stat.Season</td>
                            <td>@stat.Apps</td>
                            <td>@stat.Goals</td>
                            <td>@stat.Assists</td>
                        </tr>
                    }
                    
                </tbody>
            </table>
            
        </div>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>