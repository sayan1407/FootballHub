@model List<News>


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>Document</title>
</head>
<body>
    <div class="container">
       @foreach(var news in Model)
        {
            <div class="row border bg-light mb-3">
                <div class="col-3 py-2">
                    <img src="~/NewsImage/@news.ImageUrl" width="300px" height="250px" alt="News">
                </div>
                <div class="col-9 py-3">
                    <h2>@news.Headline</h2>
                    <p>
                        @news.ShortSummary

                        <a asp-action="FullNews" asp-route-id="@news.Id">..Read full story</a>
                    </p>
                </div>
            </div>
        }
    </div>

</body>
</html>