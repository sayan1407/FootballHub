@model Player

<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="All"></div>
            <div class="form-group">
               <label asp-for="Name"></label>
               <input asp-for="Name" class="form-control" />
               <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="JersyNo"></label>
                <input asp-for="JersyNo" class="form-control" />
                <span asp-validation-for="JersyNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nationality"></label>
                <input asp-for="Nationality" class="form-control" />
                <span asp-validation-for="Nationality" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Position"></label>
                <input asp-for="Position" class="form-control" />
                <span asp-validation-for="Position" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="file" class="form-control-file" id="PlayerImage" name="PlayerImage" />
            </div>
            <br />
            <input type="submit" class="btn btn-primary" />
        </form>
        
    </div>
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial.cshtml" />

    }
}